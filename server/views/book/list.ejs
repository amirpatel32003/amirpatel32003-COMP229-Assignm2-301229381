<%- include('../partials/header'); -%>
<%- include('../partials/main_nav'); -%>
<p>&nbsp;</p>
<main class="container">
<div class="row">
    <div class="col-md-offset-3 col md-8">
        <style>
            Body{
                
          background-image: linear-gradient(#2133b0,#ffc3a0);}
        </style> 
        <h1 style="border-top-color: #ffc3a0 ; ">Contact-Info</h1>
        <%if(typeof displayName =='string' && displayName){%>
        <a href="/bookList/add" class="btn btn-primary" role="button">
            <i class ="fas fa-plus-circle"></i>Add a Contact</a>
            <%}%>
        <br>
        <table class = "table table-bordered table-striped table-hover">
            <tr>

                <th class="text-content col-2">Name</th>
                <th class="text-content col-2">Number</th>
                <th class="text-content col-1">Email</th>
                <%if(typeof displayName =='string' && displayName){%>
                <th class="text-content col-1"></th>
                <th class="text-content col-1"></th>
                <%}%>
                </tr>
           <% for(let count = 0; count<BookList.length; count++){ %>
            <tr>
                <td class = "text-center col-2"><%=BookList[count].Name%></td>
                <td class = "text-center col-2"><%=BookList[count].Number%></td>
                <td class = "text-center col-1"><%=BookList[count].Email%></td>
                <%if(typeof displayName =='string' && displayName){%>
                <td class ="text-center col-1"><a href="/bookList/edit/<%=BookList[count]._id%>" class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Update</a></td>
                <td class ="text-center col-1"><a href="/bookList/delete/<%=BookList[count]._id%>" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a></td>    
            <%}%>
            </tr>
                <%}%>
            </table>

        </div>
        <button class="open-button" onclick="openForm()">For any Concern Email US Now!</button>
        <div class="chat-popup" id="myForm">
            <form action="mailto:patelamir32003@gmail.com" class="form-container">
                <label for="msg"><b>Email us now!</b></label>
                <textarea class="chat" placeholder="Type message.." name="msg" required></textarea>
    
                <button type="submit" class="btn">Send</button>
                <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
            </form>
            <script>
                function openForm() {
                    document.getElementById("myForm").style.display = "block";
                }
    
                function closeForm() {
                    document.getElementById("myForm").style.display = "none";
                }
            </script>
    
        </div>    
    </div>
    </main>
